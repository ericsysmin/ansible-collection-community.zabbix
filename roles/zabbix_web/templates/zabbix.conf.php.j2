//$SSO['SETTINGS']		= {{ zabbix_web_saml_settings }}';
{% endif %}

{% if zabbix_web_env is defined %}
{% for env,val in zabbix_web_env.iteritems() %}
putenv("{{env}}={{val}}");
{% endfor %}
{% endif %}
?>
